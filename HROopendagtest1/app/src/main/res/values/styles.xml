<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/HRO_mainColor</item>
    </style>



    <!-- Specific Feed activity theme -->
    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/HRO_white2</item>
        <item name="android:textColor">#33343B</item>
    </style>

    <style name="DarkTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowBackground">@color/HRO_black2</item>
    </style>



    <style name="HRO_switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#0000ff</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#00FF00
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#FF00001f
        </item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
