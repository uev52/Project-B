<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".wijnhaven99">

    <TextView
        android:id="@+id/textView99"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@color/HRO_mainColor"
        android:gravity="center"
        android:text="Wijnhaven 99"
        android:textColor="@color/HRO_white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/viewFlippertext99"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ViewFlipper
        android:id="@+id/viewFlippertext99"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/viewFlipperimage99"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView99">

        <TextView
            android:id="@+id/groundfloor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:background="@color/HRO_mainColor"
            android:gravity="center"
            android:text="Ground Floor"
            android:textColor="@color/HRO_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/firstfloor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:background="@color/HRO_mainColor"
            android:gravity="center"
            android:text="First Floor"
            android:textColor="@color/HRO_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/secondfloor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:background="@color/HRO_mainColor"
            android:gravity="center"
            android:text="Second Floor"
            android:textColor="@color/HRO_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/thirdfloor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:background="@color/HRO_mainColor"
            android:gravity="center"
            android:text="Third Floor"
            android:textColor="@color/HRO_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fourthfloor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:background="@color/HRO_mainColor"
            android:gravity="center"
            android:text="Fourth Floor"
            android:textColor="@color/HRO_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fifthfloor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:background="@color/HRO_mainColor"
            android:gravity="center"
            android:text="Fifth Floor"
            android:textColor="@color/HRO_white"
            android:textSize="20sp" />
    </ViewFlipper>

    <ViewFlipper
        android:id="@+id/viewFlipperimage99"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/previousFloorwh99"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewFlippertext99">

        <com.github.chrisbanes.photoview.PhotoView

            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/cmi1070" />

        <com.github.chrisbanes.photoview.PhotoView

            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/cmi1071" />

        <com.github.chrisbanes.photoview.PhotoView

            android:id="@+id/imageView3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/cmi1072" />

        <com.github.chrisbanes.photoview.PhotoView

            android:id="@+id/imageView4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/cmi1073" />

        <com.github.chrisbanes.photoview.PhotoView

            android:id="@+id/imageView5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/cmi1074" />

        <com.github.chrisbanes.photoview.PhotoView

            android:id="@+id/imageView6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/cmi1075" />

        <com.github.chrisbanes.photoview.PhotoView

            android:id="@+id/imageView7"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/cmi1076" />


    </ViewFlipper>

    <Button
        android:id="@+id/nextFloorwh99"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/HRO_mainColor"
        android:text="Next"
        android:textColor="@color/HRO_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/previousFloorwh99" />

    <Button
        android:id="@+id/previousFloorwh99"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/nextFloorwh99"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/HRO_mainColor"
        android:text="Prev"
        android:textColor="@color/HRO_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextFloorwh99"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>