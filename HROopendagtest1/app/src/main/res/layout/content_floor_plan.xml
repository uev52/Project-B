<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".floor_plan"
    tools:showIn="@layout/app_bar_floor_plan">




        <Button
            android:id="@+id/Wijnhaven99"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/HRO_mainColor"
            android:text="Wijnhaven99"
            android:textColor="@color/HRO_white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/Wijnhaven103"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ChooseBuilding" />

        <Button
            android:id="@+id/Wijnhaven103"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/HRO_mainColor"
            android:text="Wijnhaven103"
            android:textColor="@color/HRO_white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/Wijnhaven107"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Wijnhaven99" />

        <Button
            android:id="@+id/Wijnhaven107"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/HRO_mainColor"
            android:text="Wijnhaven107"
            android:textColor="@color/HRO_white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.61"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Wijnhaven103" />

        <TextView
            android:id="@+id/ChooseBuilding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/HRO_mainColor"
            android:gravity="center"
            android:text="Choose Building"
            android:textColor="@color/HRO_white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/Wijnhaven99"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>